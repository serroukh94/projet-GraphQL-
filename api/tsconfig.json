{
  "compilerOptions": {
    /* Ciblage et modules */
    "target": "es2016",                              /* Version ES que vous utilisez pour émettre le JavaScript */
    "module": "commonjs",                            /* Utilisé par Node.js */
    "rootDir": "./src",                              /* Dossier source si votre code se trouve dans 'src' */
    "outDir": "./dist",                              /* Dossier de sortie pour le code compilé */

    /* Interopérabilité */
    "esModuleInterop": true,                         /* Pour faciliter l'import de modules CommonJS */
    "forceConsistentCasingInFileNames": true,        /* Assure une casse cohérente dans les imports */

    /* Strict et vérifications de type */
    "strict": true,                                  /* Active toutes les vérifications strictes (inclut strictNullChecks, strictBindCallApply, etc.) */
    "noImplicitAny": true,                           /* Interdit l'utilisation de type 'any' implicite */
    "noUnusedLocals": true,                          /* Génère des erreurs pour les variables déclarées mais jamais utilisées */
    "noUnusedParameters": true,                      /* Génère des erreurs pour les paramètres non utilisés */
    "noImplicitReturns": true,                       /* Garantit que toutes les branches retournent une valeur dans les fonctions */
    "noFallthroughCasesInSwitch": true,              /* Empêche les cas de "fallthrough" dans les switch */

    /* Optimisations et vérifications de librairies */
    "skipLibCheck": true,                            /* Skippe la vérification de type des .d.ts des modules */
    "resolveJsonModule": true,                       /* Permet d'importer des fichiers JSON */
    "incremental": true                              /* Permet une compilation incrémentale pour améliorer les temps de compilation */
  },
  "include": ["src/**/*"],                           /* Inclut tous les fichiers TypeScript dans le dossier 'src' */
  "exclude": ["node_modules"]                        /* Exclut le dossier node_modules */
}
